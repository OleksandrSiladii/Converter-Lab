<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/color_of_recyclerView</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="android:textColor">@color/color_text</item>
        <!--<item name="homeAsUpIndicator">@drawable/ic_arrow_i</item>-->
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/color_text</item>
    </style>

    <style name="Btn_style">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">@dimen/font_size_20sp</item>
    </style>

    <style name="CardView_style">
        <item name="android:layout_marginLeft">@dimen/card_view_margin</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin</item>
        <item name="android:layout_marginTop">@dimen/card_view_margin</item>
    </style>

    <style name="actionBar" parent="AlertDialog.AppCompat.Light">
        <item name="android:background">@color/color_text</item>
    </style>

    <style name="CustomActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="actionBarStyle">@style/MyActionBar</item>

    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
    <item name="android:background">@color/color_text</item>
    <item name="background">@color/color_text</item>
    <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

</resources>